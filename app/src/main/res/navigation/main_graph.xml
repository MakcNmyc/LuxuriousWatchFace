<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_graph"
    app:startDestination="@id/settingsFragment">

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.shishkin.luxuriouswatchface.ui.settings.SettingsFragment"
        android:label="SettingsFragment" >
        <action
            android:id="@+id/action_settings_to_colorsPicker"
            app:destination="@id/colorsPickerFragment" />
        <argument
            android:name="settingsChanges"
            app:argType="com.shishkin.luxuriouswatchface.models.SettingsChanges"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/colorsPickerFragment"
        android:name="com.shishkin.luxuriouswatchface.ui.settings.ColorsPickerFragment"
        android:label="ColorsPickerFragment" >
        <argument
            android:name="settingsId"
            app:argType="string" />
        <action
            android:id="@+id/action_colorsPicker_to_settings"
            app:destination="@id/settingsFragment" />
    </fragment>
</navigation>